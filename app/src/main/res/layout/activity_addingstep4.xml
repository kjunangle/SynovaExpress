<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutHeader"
        android:orientation="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:shrinkColumns="1"
            android:stretchColumns="8,4">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="500px"
                    android:layout_height="200px"
                    android:id="@+id/imageView_Time"
                    android:background="@drawable/headerleft" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView_User"
                    android:background="@drawable/headright" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:id="@+id/layoutMenu"
        android:layout_below="@+id/layoutHeader">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:shrinkColumns="1"
            android:stretchColumns="2,10"
            android:background="#0f6596">

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:id="@+id/menuButton"
                    android:src="@drawable/buttonmenu"
                    android:layout_marginTop="2pt"
                    android:layout_marginLeft="2pt"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/tabadding4"
                    android:layout_column="1" />


            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>